<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="colorPrimary" format="color" />
    <attr name="colorPrimaryDark" format="color" />
    <attr name="colorAccent" format="color" />
    <attr name="textColorPrimary" format="color" />
    <attr name="viewBackground" format="color" />

    <declare-styleable name="CircleImageView">
        <attr name="type" format="enum">
            <enum name="none" value="0" />
            <enum name="circle" value="1" />
            <enum name="rect_rounded" value="2" />
        </attr>
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="rectRoundRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="IconListPreference">
        <attr name="iconsDrawables" format="reference" />
    </declare-styleable>

    <!-- loadingView -->
    <declare-styleable name="LoadingView">
        <!--  设置外面进度条的半径 -->
        <attr name="outerCircleRadius" format="dimension|reference" />
        <!--  设置外面进度条的颜色 -->
        <attr name="outerCircleColor" format="color|reference" />
        <!--  设置三角形外接圆的半径 -->
        <attr name="innerTriangleRadius" format="dimension|reference" />
        <!--  设置三角形颜色 -->
        <attr name="innerTriangleColor" format="color|reference" />
        <!--  设置背景的颜色 -->
        <attr name="backgroundColor" format="color|reference" />
        <!--  设置是否需要背景 -->
        <attr name="isNeedBackground" format="boolean" />
        <attr name="strokeWidth" format="dimension|reference" />
    </declare-styleable>

    <!-- TiltTextView -->
    <declare-styleable name="TiltTextView">
        <attr name="tiltBgColor" format="color" />
        <attr name="tiltTextSize" format="dimension" />
        <attr name="tiltText" format="string" />
        <attr name="tiltTextColor" format="color" />
        <attr name="tiltLength" format="dimension" />
        <attr name="tiltMode" format="enum">
            <enum name="left_top" value="0" />
            <enum name="left_top_triangle" value="1" />
            <enum name="left_bottom" value="2" />
            <enum name="left_bottom_triangle" value="3" />
            <enum name="right_top" value="4" />
            <enum name="right_top_triangle" value="5" />
            <enum name="right_bottom" value="6" />
            <enum name="right_bottom_triangle" value="7" />
        </attr>
    </declare-styleable>

</resources>