<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="@color/white"
android:foreground="?attr/selectableItemBackground"
android:layout_marginBottom="@dimen/m10"
android:layout_marginLeft="@dimen/m10"
android:layout_marginRight="@dimen/m10">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView
                android:id="@+id/tv_item_fg_knowledge_title"
                android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/m14"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/m14"
        android:layout_marginTop="@dimen/m10"/>

        <TextView
                android:id="@+id/tv_item_fg_knowledge_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="@dimen/m12"
                android:textColor="@color/gray75"
                android:layout_marginStart="@dimen/m14"
                android:layout_marginEnd="@dimen/m14"
                android:layout_marginTop="@dimen/m5"
        android:layout_marginBottom="@dimen/m10"/>
    </LinearLayout>



</android.support.v7.widget.CardView>