<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m200"
        android:foreground="?attr/selectableItemBackground"
android:layout_marginBottom="@dimen/m10"
android:background="@color/white">


    <ImageView
            android:id="@+id/iv_item_fg_project_detail_icon"
            android:layout_width="@dimen/m100"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/m14"
            tools:ignore="MissingConstraints"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/m10"
            android:layout_marginBottom="@dimen/m10"/>


    <TextView
            android:id="@+id/tv_item_fg_project_detail_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/m14"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/iv_item_fg_project_detail_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="@dimen/m10"
            android:layout_marginEnd="@dimen/m14"
            android:layout_marginLeft="@dimen/m10"
    android:singleLine="true"/>

    <TextView
            android:id="@+id/tv_item_fg_project_detail_content"
            android:layout_width="0dp" android:layout_height="wrap_content"
    android:text=""
    android:textSize="@dimen/m12"
    android:textColor="@color/gray94"
            app:layout_constraintLeft_toRightOf="@id/iv_item_fg_project_detail_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_fg_project_detail_title"
            android:layout_marginTop="@dimen/m5"
            android:layout_marginStart="@dimen/m10"
            android:layout_marginEnd="@dimen/m14"
            android:maxLines="6"
            android:lineSpacingExtra="@dimen/m3"
            android:ellipsize="end"
    />

    <ImageView
            android:id="@+id/iv_item_fg_project_detail_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like_not"
          app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/m14"
            android:layout_marginBottom="@dimen/m34"
           />

    <TextView
            android:id="@+id/tv_item_fg_project_detail_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/m12"
            android:textColor="@color/gray75"
          app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_item_fg_project_detail_icon"
            android:layout_marginStart="@dimen/m10"
            android:layout_marginBottom="@dimen/m10"
    />
    <TextView
            android:id="@+id/tv_item_fg_project_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/m12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/m14"
            android:layout_marginBottom="@dimen/m10"
            />

</android.support.constraint.ConstraintLayout>