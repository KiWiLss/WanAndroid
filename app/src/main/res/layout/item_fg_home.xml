<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingRight="@dimen/m14"
        android:paddingTop="@dimen/m10"
        android:paddingBottom="@dimen/m10"
        android:focusable="true"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/m10"
>


    <com.coorchice.library.SuperTextView
            android:id="@+id/stv_item_fg_home_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="@string/search"
            android:textSize="@dimen/m12"
            android:layout_marginLeft="@dimen/m14"
            android:textColor="@color/red"
            app:stroke_color="@color/red"
            app:corner="@dimen/m4"
            app:stroke_width="@dimen/m1"
            android:padding="@dimen/m5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />


    <TextView
            android:id="@+id/tv_item_fg_home_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鸿阳"
            android:textSize="@dimen/m12"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintLeft_toRightOf="@+id/stv_item_fg_home_tag"
            android:layout_marginLeft="@dimen/m14"
            android:layout_marginTop="@dimen/m4"
            app:layout_constraintTop_toTopOf="parent"
    />

    <TextView
            android:id="@+id/tv_item_fg_home_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-12-22"
            android:textSize="@dimen/m12"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/m4"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_item_fg_home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="每天来领个红包吧"
            android:textSize="@dimen/m14"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_fg_home_auth"
            android:layout_marginTop="@dimen/m10"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/m14"/>


    <TextView
            android:id="@+id/tv_item_fg_home_memo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="干货资源/课程推荐"
            android:textSize="@dimen/m12"
            android:textColor="@color/textColorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_fg_home_title"
            android:layout_marginTop="@dimen/m4"
            android:layout_marginLeft="@dimen/m14"
            app:layout_constraintLeft_toLeftOf="parent"
    />


    <ImageView
            android:id="@+id/iv_item_fg_home_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like_not"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />



</android.support.constraint.ConstraintLayout>